<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".views.photos.EnclosedAttachmentsPickingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_marginBottom="20dp"
        android:text="@string/capture_one_or_more_of_the_following"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primaryColorLime"
        android:gravity="center" />

    <Button
        android:id="@+id/take_id_pic_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="@string/id_card" />

    <Button
        android:id="@+id/take_driving_license_pic_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="@string/driver_license" />

    <Button
        android:id="@+id/take_payment_doc_pic_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="@string/payment_document" />

    <TextView
        android:id="@+id/id_pic_descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="@string/id_card_filename" />

    <TextView
        android:id="@+id/driving_license_pic_descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="@string/driving_license_filename" />

    <TextView
        android:id="@+id/payment_doc_pic_descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="@string/payment_document_filename" />

</LinearLayout>
